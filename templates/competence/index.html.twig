{% extends 'base.html.twig' %}

{% block title %}
    {% if id is defined %}
        {{ "Update skill"|trans }}{{ parent() }}
    {% else %}
        {{ "New skill"|trans }}{{ parent() }}
    {% endif %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 col-md-6">
            {{ form_start(competenceForm) }}
            <h2>
                {% if id is defined %}
                    {{ "Update skill"|trans }}{{ parent() }}
                {% else %}
                    {{ "New skill"|trans }}{{ parent() }}
                {% endif %}
            </h2>
            <div class="row">
                <div class="col-md-6 my-3">
                    {{ form_widget(competenceForm) }}
                </div>
            </div>

            <button type="submit" class="btn btn-success">{{ "Submit"|trans }}</button>
            {% if id is defined %}
                <a href="{{ path('competence_remove', { 'id': id }) }}" class="btn btn-danger">{{ "Delete"|trans }}</a>
            {% endif %}
            {{ form_end(competenceForm) }}
        </div>

        {% if competence is defined %}
        <hr class="d-block d-md-none my-5">
        
        <div class="col-12 col-md-6">
            <img src="{{ asset('img/' ~ competence.image) }}" class="img-fluid{% if competence.width is not null %} w-{{ competence.width }}{% endif %}" alt="Logo de {{ competence.name }}" title="Logo de {{ competence.name }}">
        </div>
        {% endif %}
    </div>
{% endblock %}
